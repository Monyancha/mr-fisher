<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_dark"
    android:orientation="vertical"

    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        style="@style/NarukunuOruKadai_white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="20dp" />

    <com.naruku.fisher.fontui.FontCheckedTextView
        android:id="@+id/nav_CtvLoanSelector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkMark="@drawable/checkbox_dropdown_selector"
        android:checked="false"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:padding="20dp"
        android:text="123 Beech Forge"
        android:textColor="@color/white"
        android:textSize="18sp"
        font:fontFace="Lato-Medium.ttf" />


</LinearLayout>